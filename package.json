{
  "name": "jira-ai",
  "version": "0.3.7",
  "description": "AI friendly Jira CLI to save context",
  "main": "dist/cli.js",
  "bin": {
    "jira-ai": "./dist/cli.js"
  },
  "files": [
    "dist",
    "settings.yaml",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/festoinc/jira-ai.git"
  },
  "bugs": {
    "url": "https://github.com/festoinc/jira-ai/issues"
  },
  "homepage": "https://github.com/festoinc/jira-ai#readme",
  "scripts": {
    "dev": "ts-node src/cli.ts",
    "build": "tsc && chmod +x dist/cli.js",
    "start": "node dist/cli.js",
    "link": "npm run build && npm link",
    "prepublishOnly": "npm run build && npm test",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "keywords": [
    "jira",
    "cli",
    "atlassian",
    "jira-api",
    "issue-tracker",
    "task-management",
    "command-line",
    "typescript"
  ],
  "author": "Anatolii Fesiuk",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^11.0.0",
    "dotenv": "^17.2.3",
    "jira.js": "^5.2.2",
    "js-yaml": "^4.1.1",
    "marklassian": "^1.0.0",
    "mdast-util-from-adf": "^2.2.0",
    "mdast-util-to-markdown": "^2.1.2",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.3",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "adf-builder": "npm:@atlaskit/adf-utils@^19.26.4",
    "uuid": "^10.0.0"
  }
}
